<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:focusable="true">

    <TextView
        android:id="@+id/tv_step_order"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_large"
        android:layout_marginStart="@dimen/margin_large"
        android:layout_marginTop="@dimen/margin_large"
        android:textAppearance="?attr/textAppearanceListItem"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/text_large"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="0. " />

    <TextView
        android:id="@+id/tv_step_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/margin_medium"
        android:layout_marginStart="@dimen/margin_medium"
        android:textAppearance="?attr/textAppearanceListItem"
        android:textSize="@dimen/text_large"
        app:layout_constraintBottom_toBottomOf="@+id/tv_step_order"
        app:layout_constraintEnd_toStartOf="@+id/iv_next_step"
        app:layout_constraintStart_toEndOf="@+id/tv_step_order"
        app:layout_constraintTop_toTopOf="@+id/tv_step_order"
        tools:text="Step introduction" />

    <ImageView
        android:id="@+id/iv_next_step"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_step_order"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_step_order"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/ic_next"
        tools:ignore="ContentDescription" />

    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="#cfcfcf"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/tv_step_name"
        app:layout_constraintRight_toRightOf="parent" />


</android.support.constraint.ConstraintLayout>